#!/usr/bin/env bash
set -euo pipefail

# Run the PowerShell version bump script
if command -v pwsh >/dev/null 2>&1; then
  PS=pwsh
elif command -v powershell >/dev/null 2>&1; then
  PS=powershell
else
  echo "No PowerShell available; skipping version bump" >&2
  exit 0
fi

$PS -NoProfile -ExecutionPolicy Bypass -File "$(git rev-parse --show-toplevel)/scripts/bump-version.ps1"

# Stage version.json if changed
git add version.json || true

exit 0
